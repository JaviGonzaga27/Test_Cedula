@model IEnumerable<proyecto_javier.Models.ClientePS>

@{
    ViewData["Title"] = "Cliente";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h1 class="text-primary">Lista de Clientes</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Crear Cliente
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Cédula</th>
                            <th>Apellidos</th>
                            <th>Nombres</th>
                            <th>Fecha Nacimiento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Estado</th>
                            <th>Saldo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td data-label="Código">@item.Codigo</td>
                                <td data-label="Cédula">@item.Cedula</td>
                                <td data-label="Apellidos">@item.Apellidos</td>
                                <td data-label="Nombres">@item.Nombres</td>
                                <td data-label="Fecha Nacimiento">@item.FechaNacimiento.ToShortDateString()</td>
                                <td data-label="Email">@item.Mail</td>
                                <td data-label="Teléfono">@item.Telefono</td>
                                <td data-label="Estado">
                                    <span class="badge bg-@(item.Estado ? "success" : "danger")">
                                        @(item.Estado ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td data-label="Saldo">@item.Saldo.ToString("C")</td>
                                <td data-label="Acciones">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Codigo" class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" title="Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Codigo" class="btn btn-outline-warning btn-sm" data-bs-toggle="tooltip" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Codigo" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}